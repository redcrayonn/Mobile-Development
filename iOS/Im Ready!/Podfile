platform :ios, '9.0'

target 'Im Ready!' do
    use_frameworks!
    
    # Pods for Im Ready!
    pod 'Alamofire', '~> 4.5'
    pod 'AlamofireImage', '~> 3.3'
    pod 'Alamofire-SwiftyJSON'
    pod 'SwiftyJSON'
    
    # A network activity indicator for alamofire
    # If alamofire does a request, a little indicator in the statusbar shows
    pod 'AlamofireNetworkActivityIndicator'
    
    # Keychain pod
    #  pod 'KeychainAccess'
    pod 'Locksmith'
    
    # Make a nice background for empty TableViews or CollectionViews
    pod 'DZNEmptyDataSet'
    
    # Create beautiful colors
    pod 'ChameleonFramework'
    
    # Create textfields with effects
    pod 'TextFieldEffects'
    
    # Powerful data driven content manager for UITableView.
    pod 'RETableViewManager'
    
    # Make tableviewcells swipeable
    pod 'MGSwipeTableCell'
    
    # Add animations
    # pod 'Spring'
    
    # Set a custom font
    pod 'FontBlaster'
    
    # Awesome icons
    pod 'FontAwesomeIconFactory'
    
    # Cryptography pod for all sorts of hashing and encryption
    pod 'CryptoSwift'
    
    # Beautiful calendar
    pod 'FSCalendar'
    
    # Date handling
    pod 'Timepiece'
    
    # Empty tableview/collectionview pod
    pod 'DZNEmptyDataSet'
    
    target 'Im Ready!Tests' do
        inherit! :search_paths
        # Pods for testing
    end
    
    target 'Im Ready!UITests' do
        inherit! :search_paths
        # Pods for testing
    end
    
end
