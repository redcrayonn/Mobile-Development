<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/sm"
    style="@style/AppTheme.Alt">
    <TextView
        android:id="@+id/component_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/add_indicator"
        android:layout_marginStart="@dimen/xxl"
        android:layout_centerVertical="true"
        tools:text="Woonruimte zoeken"/>
    <TextView
        android:id="@+id/notificationCount"
        android:layout_width="@dimen/xl"
        android:layout_height="@dimen/xl"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorNeutral"
        android:gravity="center"
        android:background="@drawable/bg_button_round"
        android:backgroundTint="@color/colorAccent"
        tools:text="0"/>
    <ImageView
        android:id="@+id/check_icon"
        android:layout_width="@dimen/xl"
        android:layout_height="@dimen/xl"
        android:src="@drawable/ic_check"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>
</RelativeLayout>