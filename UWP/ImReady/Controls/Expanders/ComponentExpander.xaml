<UserControl
    x:Class="ImReady.Controls.ComponentExpander"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImReady.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    
    xmlns:models="using:ImReady.Models"
    xmlns:converters="using:ImReady.Helpers.Converters"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Expander/ComponentActivity.xaml"/>
                <ResourceDictionary Source="/Styles/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:StatusToBooleanConverter x:Key="StatusToBooleanConverter"/>
            <converters:StatusToCheckboxBooleanConverter x:Key="StatusToCheckboxBooleanConverter"/>
        </ResourceDictionary>        
    </UserControl.Resources>
    <controls:Expander 
                        x:Name="Expander2" 
                        VerticalAlignment="Top" 
                        Margin="0"
                        Header="{x:Bind Component.Name}"
                        HorizontalContentAlignment="Stretch"
                        Foreground="White"
                        Background="Transparent"
                        IsExpanded="False"
                        ExpandDirection="Down"
                        Style="{StaticResource ComponentActivityExpander}"             
                        Tag="bla"
                        >
        <controls:Expander.Resources>
            <SolidColorBrush x:Key="SystemControlHighlightAccentBrush" Color="{StaticResource ThemeOrangeDefault}" />
            <SolidColorBrush x:Key="ToggleButtonBackgroundPointerOver" Color="{StaticResource ThemeOrangeDark}" />
            <x:String x:Key="ExpanderSecondaryText">TestHeader</x:String>
        </controls:Expander.Resources>
        <Grid Background="White">
                <TextBlock HorizontalAlignment="Center"
                      TextWrapping="Wrap"
                      Text="{x:Bind Component.Name}"
                      VerticalAlignment="Top"
                           Foreground="Black"
                       />
                <ScrollViewer RelativePanel.Below="commandbar" Margin="0 50 0 0 " HorizontalAlignment="Stretch" Padding="40">
                <ItemsControl ItemsSource="{x:Bind Component.Activities}" Foreground="Black">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="models:Activity">
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <CheckBox VerticalAlignment="Top" IsEnabled="False" IsChecked="{x:Bind Status, Converter={StaticResource StatusToCheckboxBooleanConverter}}"></CheckBox>
                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                    <TextBlock Text="{x:Bind Name}"></TextBlock>
                                    <TextBlock Text="{x:Bind Description}"></TextBlock>
                                    <TextBox 
                                                x:Name="TextContent"
                                                MinHeight="150" 
                                                AcceptsReturn="True" 
                                                Text="{x:Bind Content}"
                                                ScrollViewer.HorizontalScrollMode="Disabled"
                                                IsReadOnly="{x:Bind Status, Converter={StaticResource StatusToBooleanConverter}}"
                                                ></TextBox>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock  Text="Uitwerkingen worden tussentijds automatisch opgeslagen"></TextBlock>
                                        <Button x:Name="SubmitTask" Content="INLEVEREN" HorizontalAlignment="Right" Click="SubmitTask_Click"></Button>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                </ScrollViewer>
            </Grid>
        </controls:Expander>
</UserControl>
