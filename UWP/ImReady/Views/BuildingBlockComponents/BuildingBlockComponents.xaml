<Page
    x:Class="ImReady.Views.BlockComponents.BuildingBlockComponents"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImReady.Views.BlockComponents"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    
    xmlns:controls1="using:ImReady.Controls"
    xmlns:local1="using:ImReady.Models">
    <Grid>
        <Grid.Resources>

        </Grid.Resources>
        <CommandBar
                    IsOpen="True"
                    Background="#303030"
                    Foreground="White"
                x:Name="commandbar"
                    >
                <CommandBar.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{x:Bind ViewModel.BuildingBlock.Name}" Foreground="White" Margin="40 0" FontSize="25" FontWeight="Light"/>
                    </StackPanel>
                </CommandBar.Content>
            </CommandBar>
        <ScrollViewer RelativePanel.Below="commandbar" Margin="0 40 0 0 ">
            <ItemsControl ItemsSource="{x:Bind ViewModel.BuildingBlock.Components}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="local1:BuildingBlockComponent">
                        <StackPanel>
                            <controls1:BuildingBlockComponentExpander BuildingBlockComponent="{Binding}">

                            </controls1:BuildingBlockComponentExpander>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
